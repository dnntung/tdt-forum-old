  <div class="body container-md px-3">
    <div class="row position-relative pb-3">
      <!-- Khu vực hiển thị thông tin người dùng -->
      <div id="profile" class="col-md-4 position-sticky mb-3 mb-md-0">
        <div class="bg-light shadow-sm rounded">
          <!-- Tiêu đề trang -->
          <div class="header p-3 rounded d-flex justify-content-between border-bottom bg-light">
            <div class="d-flex">
              <div class="spinner-border text-primary spinner-header loading" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <strong>Thông tin</strong> 
            </div>
            <% if (selectedUser.nameTag === currentUser.nameTag) { %>
              <button id="editProfileBtn" class="btn rounded">
                <span><i class="fas fa-pen"></i></span>
              </button>
            <% } %>
          </div>

          <div class="content">
            <div class="p-3 border-bottom d-flex flex-column justify-content-center">
              <% if (selectedUser.nameTag === currentUser.nameTag) { %>
                <input id="avatarUploader" class="form-control mb-3 d-none" type="file" name="image" accept="image/*" />
              <% } %>
              <div class="avatar avatar-full rounded-circle shadow mb-3 mx-auto">
                <img class="w-100 h-100" src="<%= selectedUser.avatar %>" alt="<%= selectedUser.nameTag %>">  
              </div>
              <div id='name' class="text-center">
                <span class="h5"><strong><%= selectedUser.name %></strong></span>
                <% if (selectedUser.nameTag === currentUser.nameTag) { %>
                  <input type="text" class="mb-1 form-control text-center d-none">
                <% } %>
                <h5 class="text-muted">@<%= selectedUser.nameTag %></h5>
              </div>
            </div>
            <% if (selectedUser.role === 3) { %>
              <div id="major" class="p-3 border-bottom w-100">
                <div class="w-100"><strong>Khoa</strong></div>
                <div class="w-100">
                  <span class="text-muted"><%= selectedUser.otherInfo.major %></span>
                  <% if (selectedUser.nameTag === currentUser.nameTag) { %>
                    <input type="text" class="mt-1 d-none form-control">
                  <% } %>
                </div>
              </div>
              <div id="class" class="p-3 border-bottom">
                <div class="w-100"><strong>Lớp</strong></div>
                <div class="w-100">
                  <span class="text-muted"><%= selectedUser.otherInfo.class %></span>
                  <% if (selectedUser.nameTag === currentUser.nameTag) { %>
                    <input type="text" class="mt-1 d-none form-control">
                  <% } %>
                </div>
              </div>
            <% } %>
            <% if (selectedUser.nameTag === currentUser.nameTag) { %>
              <div id="editProfileBtns" class="modal-footer border-top-0 d-none">
                <button id="cancelEditProfile" type="button" class="form-control-btn btn btn-secondary">Hủy</button>
                <button id="confirmEditProfile" type="button" class="form-control-btn btn btn-danger">Xác nhận</button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      <!-- Khu vực hiển thị bài viết của người dùng-->
      <div id="posts" class="col-md-8">
        <div class="pb-0 bg-light shadow-sm rounded">
          <!-- Tiêu đề trang -->
          <div class="header p-3 rounded d-flex justify-content-between border-bottom bg-light">
            <div class="d-flex">
              <strong>Bài viết</strong> 
            </div>
            <% if (selectedUser.nameTag === currentUser.nameTag) {%>
              <button id="createPostBtn" class="btn btn-primary rounded text-center" data-bs-toggle="modal" data-bs-target="#createPostModal">
                <span><i class="fas fa-edit"></i></span>
                <span class="label">Bài viết mới</span>
              </button>
            <% } %>
          </div>

          <!-- Khu vực chính -->
          <div class="content">
            <div id="post-list">
              <!-- Bài viết mẫu-->
              <!-- <div class="post pt-3 px-3 border-bottom">
                <div class="post-container w-100 d-flex flex-row">
